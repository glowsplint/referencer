# Database file path (default: ./data/referencer.db)
DB_PATH=

# Server port (default: 5000)
PORT=5000

# Node environment: "development" or "production"
# Controls cookie secure flag and other production behaviors
NODE_ENV=development

# Public base URL of the backend (default: http://localhost:5000)
# Used for OAuth callback URLs
BASE_URL=http://localhost:5000

# Session max age in seconds (default: 2592000 = 30 days)
SESSION_MAX_AGE=2592000

# --- OAuth Providers (all optional, enable by providing credentials) ---

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Apple Sign-In
APPLE_CLIENT_ID=
APPLE_PRIVATE_KEY=
APPLE_TEAM_ID=
APPLE_KEY_ID=

# Facebook OAuth
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
